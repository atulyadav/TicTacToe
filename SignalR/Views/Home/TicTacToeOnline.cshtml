@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TicTacToe1</title>
    <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-theme.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap-table.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/bootstrap-table.min.js")"></script>
    <script src="@Url.Content("~/Scripts/humps.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.2.0.min.js")"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>
    <link href="@Url.Content("~/Content/css/TicTacToe.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/TicTacToe/TicTacToeSignalR.js")"></script>
    <style>
        #canvasId
        {
            position: relative;
        }
    </style>
</head>
<body>
    <div>
        <div class="alert alert-success" id="connection-result" data-es="Aquí se muestra el resultado del evento">
            Connection Status...
        </div>
        <div class="row">
            <div class="col-md-2">
                <a href="@Url.Action("TicTacToeBOT", "Home")" class="btn btn-default btn-lg active btn-block" role="button">BOT</a>
                <a href="@Url.Action("TicTacToeOnline", "Home")" class="btn btn-primary btn-lg active btn-block" role="button">Friend</a>
                <button class="btn btn-default btn-lg active btn-block" role="button" id="restartGame">Restart</button>
            </div>
            <div class="col-md-5" style="text-align: center">
                 <div class="alert alert-success" id="player-status" data-es="Aquí se muestra el resultado del evento">
                    Here is the result of event.
                </div>
                <div id="canvasContainer">
                </div>
            </div>
            <div class="col-md-5">
                <div class="alert alert-success" id="events-result" data-es="Aquí se muestra el resultado del evento">
                    Here is the result of event.
                </div>
                @*data-cache="false"*@
                @*class="table hover condensed striped"*@
                <table class="table hover condensed striped" id="onlineUserList">
                    <thead>
                        <tr>
                            <th data-field="connectionId">Connection ID</th>
                            <th data-field="userName">User Name</th>
                            <th data-field="status">Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="userNameDialog" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">Please Enter your name </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="text" class="form-control" id="userName" />
                    </div>
                </div>
                <div class="modal-footer">
                    @*<a href="#" data-dismiss="modal" class="btn">Close</a>*@
                    <a href="#" class="btn btn-primary" id="btn-save-user">OK</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="confirmationModal" role="dialog" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="confirmationModalLabel">Do you want to play with...?</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btn-accept-user">Accept</button>
                   @* <button type="button" class="btn btn-default" data-dismiss="modal" id="btn-dismiss-user">Dismiss</button>*@
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="opponentBusyDialog"  role="dialog" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Your Requested Opponent is Occupied</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="opponentBusyClose">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>

     
</body>
</html>
